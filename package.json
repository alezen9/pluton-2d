{
  "name": "pluton-2d",
  "version": "0.1.0",
  "description": "Abstraction over HTML SVG for easy blueprint drawing.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "svg",
    "technical-drawing",
    "2d",
    "blueprint",
    "diagram",
    "engineering",
    "canvas"
  ],
  "author": "Aleksandar Gjoreski",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && tsc -p tsconfig.build.json",
    "demo": "vite build --config vite.demo.config.ts",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@tweakpane/core": "^2.0.5",
    "prettier": "^3.8.1",
    "tweakpane": "^4.0.5",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.17"
  }
}
