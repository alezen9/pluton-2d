{
  "name": "pluton-2d",
  "version": "0.1.8",
  "description": "Abstraction over HTML SVG for easy blueprint drawing.",
  "homepage": "https://pluton-2d.aleksandargjoreski.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/alezen9/pluton-2d"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/index.css"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "svg",
    "technical-drawing",
    "2d",
    "blueprint",
    "diagram",
    "engineering",
    "pluton-2d",
    "pluton",
    "svg-drawing",
    "javascript",
    "typescript",
    "geometry",
    "cad",
    "vector-graphics"
  ],
  "author": "Aleksandar Gjoreski",
  "license": "MIT",
  "scripts": {
    "build": "vite build && npm run typecheck",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test:unit": "vitest run",
    "test:e2e:serve": "vite --config vite.e2e.config.mjs",
    "test:e2e": "playwright test",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17"
  }
}
