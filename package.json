{
  "name": "pluton-2d",
  "version": "0.1.2",
  "description": "Abstraction over HTML SVG for easy blueprint drawing.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/index.css"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "svg",
    "technical-drawing",
    "2d",
    "blueprint",
    "diagram",
    "engineering"
  ],
  "author": "Aleksandar Gjoreski",
  "license": "MIT",
  "scripts": {
    "build": "vite build && npm run typecheck",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17"
  }
}
