---
const { currentPage = "/" } = Astro.props;

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const links = [
  { path: "/guide", label: "Guide" },
  { path: "/api", label: "API" },
  {
    path: "/examples/getting-started/basic-shapes",
    label: "Examples",
    activePrefix: "/examples",
  },
];
---

<nav>
  <div class="nav-container">
    <a href={`${base}/`} class="nav-brand">Pluton 2D</a>
    <ul class="nav-links">
      {links.map(({ path, label, activePrefix }) => (
        <li>
          <a
            href={`${base}${path}`}
            class={currentPage === path || (activePrefix && currentPage.startsWith(activePrefix)) ? "active" : ""}
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
    <div class="nav-right">
      <a
        href="https://github.com/alezen9/pluton-2d"
        class="nav-github"
        target="_blank"
        rel="noopener"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.385-1.335-1.755-1.335-1.755-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
</nav>

<style>
  nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--nav-bg);
    backdrop-filter: blur(24px) saturate(130%);
    -webkit-backdrop-filter: blur(24px) saturate(130%);
    border-bottom: 1px solid var(--panel-border);
    height: 64px;
  }

  .nav-container {
    max-width: 1680px;
    margin: 0 auto;
    padding: 0 1.75rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2.5rem;
  }

  .nav-brand {
    font-family: "Geist", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 0.98rem;
    font-weight: 400;
    color: var(--text-main);
    text-decoration: none;
    letter-spacing: 0.01em;
  }

  .nav-links {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 1.75rem;
    list-style: none;
    margin: 0;
    padding: 0;
    white-space: nowrap;
  }

  .nav-links li {
    display: inline-flex;
    align-items: center;
    margin: 0;
  }

  .nav-links a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    letter-spacing: 0.01em;
    font-weight: 400;
    line-height: 1;
    transition: color 0.2s;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--accent);
  }

  .nav-right {
    display: flex;
    align-items: center;
  }

  .nav-github {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s, transform 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 33px;
    height: 33px;
    border-radius: 6px;
    border: 1px solid var(--panel-border);
    background: color-mix(in oklab, var(--panel-bg) 88%, transparent);
  }

  .nav-github:hover {
    color: var(--text-main);
    border-color: var(--panel-border-strong);
    transform: translateY(-0.5px);
  }

  @media (max-width: 600px) {
    nav {
      height: 58px;
    }

    .nav-container {
      padding: 0 1rem;
      gap: 1rem;
    }

    .nav-links {
      gap: 0.75rem;
    }

    .nav-links a {
      font-size: 0.72rem;
    }
  }
</style>
