---
import BaseLayout from "../../layouts/Layout.astro";
import { getExampleNavigation } from "./navigation";

const { title = "Examples", description, ogImageSrc } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
const normalizeUrlPath = (urlPath: string) =>
  urlPath.length > 1 ? urlPath.replace(/\/+$/, "") : urlPath;
const currentUrlPath = normalizeUrlPath(Astro.url.pathname);
const categorizedExampleNavigation = await getExampleNavigation();

const isActiveExampleLink = (href: string) =>
  normalizeUrlPath(href) === currentUrlPath;
---

<BaseLayout {title} currentPage="/examples" imageSrc={ogImageSrc}>
  <div class="examples-container">
    <div class="examples-layout">
      <aside class="examples-sidebar">
        {
          categorizedExampleNavigation.map((categoryGroup) => (
            <div class="sidebar-category">
              <div class="sidebar-category-label">{categoryGroup.label}</div>
              <ul class="sidebar-links">
                {categoryGroup.items.map((item) => (
                  <li>
                    <a
                      href={`${baseUrl}${item.path}`}
                      class:list={{
                        active: isActiveExampleLink(`${baseUrl}${item.path}`),
                      }}
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </aside>
      <div class="examples-main">
        <h1>{title}</h1>
        {description && <p class="example-desc">{description}</p>}
        <slot />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .examples-container {
    --sidebar-width: 300px;
    max-width: 1680px;
    margin: 0 auto;
    height: calc(100svh - 64px);
  }

  .examples-layout {
    display: flex;
    height: 100%;
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .examples-sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    padding: var(--space-12) var(--space-4);
    overflow-y: auto;
  }

  .examples-sidebar .sidebar-category {
    margin-bottom: var(--space-4);
  }

  .examples-sidebar .sidebar-category-label {
    font-size: 0.85em;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    color: var(--text-muted);
    padding: 0 var(--space-2);
    margin-bottom: var(--space-2);
  }

  .examples-sidebar .sidebar-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1px;
    margin: 0;
    padding: 0;
  }

  .examples-sidebar .sidebar-links a {
    display: block;
    padding: var(--space-2);
    border-radius: 4px;
    color: var(--text-muted);
    opacity: 0.75;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    transition:
      color 0.15s,
      background 0.15s;
  }

  .examples-sidebar .sidebar-category + .sidebar-category .sidebar-links {
    padding-left: var(--space-5);
  }

  .examples-sidebar .sidebar-links a:hover {
    color: var(--text-main);
    background: var(--tab-hover-bg);
    text-decoration: none;
  }

  .examples-sidebar .sidebar-links a.active {
    color: var(--accent);
    background: var(--accent-light);
  }

  .examples-main {
    flex: 1;
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    min-width: 0;
  }

  .example-desc {
    color: var(--text-muted);
    font-size: 0.88rem;
    margin-bottom: var(--space-4);
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .examples-layout {
      flex-direction: column;
      height: auto;
      min-height: calc(100vh - 60px);
      overflow: visible;
    }

    .examples-sidebar {
      width: 100%;
      height: auto;
      border-right: none;
      border-bottom: 1px solid var(--panel-border);
      padding: var(--space-3) var(--space-4);
      display: flex;
      gap: var(--space-3);
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .examples-sidebar::-webkit-scrollbar {
      display: none;
    }

    .examples-sidebar .sidebar-category {
      margin-bottom: 0;
      flex-shrink: 0;
    }

    .examples-sidebar .sidebar-category-label {
      display: none;
    }

    .examples-sidebar .sidebar-links {
      flex-direction: row;
      gap: var(--space-2);
      padding-left: 0;
    }

    .examples-sidebar .sidebar-links a {
      white-space: nowrap;
      padding: var(--space-2);
      border: 1px solid var(--panel-border);
      font-size: 0.82rem;
    }

    .examples-sidebar .sidebar-links a.active {
      border-color: var(--accent);
    }

    .examples-main {
      padding: var(--space-4);
      overflow: visible;
    }
  }
</style>
