---
import ExamplesLayout from "./ExamplesLayout.astro";

const { title, description } = Astro.props;
---

<ExamplesLayout {title}>
  <h1>{title}</h1>
  <p class="example-desc">{description}</p>
  <slot />
</ExamplesLayout>

<style>
  .example-desc {
    color: var(--text-muted);
    font-size: 0.88rem;
    margin-bottom: 1rem;
    flex-shrink: 0;
  }
</style>
