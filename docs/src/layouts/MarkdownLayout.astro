---
import Layout from "./Layout.astro";
import TableOfContents from "../components/TableOfContents.svelte";

const { frontmatter } = Astro.props;
const { title = "Pluton 2D", currentPage = "/", description } = frontmatter;
---

<Layout {title} {currentPage} {description}>
  <TableOfContents client:only="svelte" />
  <div class="wrapper">
    <article id="doc-content">
      <slot />
    </article>
  </div>
</Layout>

<style>
  .wrapper {
    box-sizing: border-box;
    width: 100%;
    max-width: min(90ch, 100dvw);
    min-height: 100dvh;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  @media screen and (max-width: 480px) {
    .wrapper {
      padding: 1.5em;
    }
  }
</style>
