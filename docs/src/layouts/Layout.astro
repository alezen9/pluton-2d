---
import ClientRouter from "astro/components/ClientRouter.astro";
import Nav from "../components/Nav.astro";
import ScrollToTop from "../components/ScrollToTop.svelte";
import "../styles/global.css";
import "../styles/markdown.css";
import "pluton-2d/style.css";

const defaultDescription =
  "SVG-first JavaScript library for technical drawings, blueprints, and engineering diagrams";
const {
  title = "Pluton 2D",
  currentPage = "/",
  description = defaultDescription,
} = Astro.props;
const composedTitle = currentPage === "/" ? title : `Pluton 2D | ${title}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const enableClientRouter = import.meta.env.PROD;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{composedTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:title" content={composedTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <link rel="icon" href={`${base}/favicon.svg`} />
    {enableClientRouter && <ClientRouter />}
  </head>
  <body>
    <Nav currentPage={currentPage} />
    <main>
      <slot />
      <ScrollToTop client:only="svelte" />
    </main>
  </body>
</html>

<style>
  main {
    position: relative;
    max-width: 1680px;
    margin: 0 auto;
    min-height: 100dvh;
  }
</style>
