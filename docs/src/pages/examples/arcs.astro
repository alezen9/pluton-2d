---
import ExamplesLayout from "../../layouts/ExamplesLayout.astro";
import ArcsDemo from "../../components/demos/ArcsDemo.svelte";

const code = `scene.draw((p) => {
  // Outer ring — relative arcs (arcTo)
  geom.path()
    .moveToAbs(-p.radius, 0)
    .arcTo(p.radius, p.radius, p.radius, true)
    .arcTo(p.radius, -p.radius, p.radius, true)
    .arcTo(-p.radius, -p.radius, p.radius, true)
    .arcTo(-p.radius, p.radius, p.radius, true);

  // Inner ring — absolute arcs (arcToAbs)
  const ir = p.innerRadius;
  geom.path()
    .moveToAbs(0, ir)
    .arcToAbs(ir, 0, ir, true)
    .arcToAbs(0, -ir, ir, true)
    .arcToAbs(-ir, 0, ir, true)
    .arcToAbs(0, ir, ir, true);
});`;
---

<ExamplesLayout title="Arcs" current="/examples/arcs">
  <div class="example-header">
    <h1>Arcs</h1>
    <span class="demo-card-tag">Drawing</span>
  </div>
  <p class="example-desc">Concentric rings. Outer uses relative arcTo, inner uses absolute arcToAbs.</p>

  <ArcsDemo {code} client:visible />
</ExamplesLayout>
