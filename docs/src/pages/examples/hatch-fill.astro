---
import ExamplesLayout from "../../layouts/ExamplesLayout.astro";
import HatchFillDemo from "../../components/demos/HatchFillDemo.svelte";

const code = `const geom = scene.geometry.group();

scene.draw((p) => {
  const s = p.size, half = s / 2, gap = s * 1.4;

  // Rectangle on left
  geom.path()
    .moveToAbs(-gap / 2 - half, -half)
    .lineTo(s, 0).lineTo(0, s).lineTo(-s, 0)
    .close();

  // Triangle on right
  geom.path()
    .moveToAbs(gap / 2, half)
    .lineToAbs(gap / 2 + half, -half)
    .lineToAbs(gap / 2 - half, -half)
    .close();
});

// Toggle hatch fill at runtime
scene.enableHatchFill(enabled);`;
---

<ExamplesLayout title="Hatch Fill" current="/examples/hatch-fill">
  <div class="example-header">
    <h1>Hatch Fill</h1>
    <span class="demo-card-tag">Effects</span>
  </div>
  <p class="example-desc">Toggle the built-in hatch pattern fill on and off at runtime.</p>

  <HatchFillDemo {code} client:visible />
</ExamplesLayout>
