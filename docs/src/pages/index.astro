---
import HomeShowcase from "@home/components/HomeShowcase.svelte";
import Layout from "../layouts/Layout.astro";

const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<Layout title="Pluton 2D" currentPage="/">
  <section class="home-page" id="home-page">
    <div class="home-intro">
      <h1>Pluton 2D</h1>
      <p class="home-lead">
        SVG-first technical drawing for clean geometry, dimensions, and stable
        rendering performance.
      </p>
      <div class="hero-actions">
        <a href={`${base}/guide`} class="btn btn-primary">Guide</a>
        <a href={`${base}/examples/getting-started/basic-shapes`} class="btn btn-secondary">Examples</a>
      </div>
    </div>

    <div class="home-demo">
      <HomeShowcase client:load />
    </div>
  </section>
</Layout>

<style>
  .home-page {
    max-width: 1320px;
    height: calc(100svh - 64px);
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: grid;
    grid-template-columns: minmax(300px, 400px) minmax(0, 1fr);
    gap: 1.5rem;
    align-items: center;
    align-content: center;
    position: relative;
    overflow: hidden;
    z-index: 1;
    isolation: isolate;
  }

  .home-page::before {
    content: "";
    position: absolute;
    inset: 6% 0 8%;
    z-index: -1;
    pointer-events: none;
  }

  .home-intro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.85rem;
    min-height: 0;
    padding-left: 0.35rem;
  }

  .home-intro h1 {
    margin: 0;
    font-size: clamp(2rem, 3.8vw, 2.9rem);
  }

  .home-lead {
    margin: 0;
    max-width: 34ch;
    font-size: 0.98rem;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    padding-top: 0.35rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.46rem 1.45rem;
    border-radius: 7px;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid transparent;
    transition: transform 0.2s, border-color 0.2s, background 0.2s, color 0.2s;
  }

  .btn:hover {
    transform: translateY(-1px);
    text-decoration: none;
  }

  .btn-primary {
    color: #1e3934;
    background: color-mix(in oklab, var(--accent) 76%, white);
  }

  .btn-primary:hover {
    background: color-mix(in oklab, var(--accent-hover) 72%, white);
  }

  .btn-secondary {
    color: var(--text-main);
    border-color: var(--panel-border);
    background: color-mix(in oklab, var(--panel-bg) 90%, transparent);
  }

  .btn-secondary:hover {
    color: var(--accent-hover);
    border-color: color-mix(in oklab, var(--accent) 65%, var(--panel-border));
    background: color-mix(in oklab, var(--accent-light) 34%, transparent);
  }

  .home-demo {
    min-height: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    align-self: center;
  }

  @media (max-width: 920px) {
    .home-page {
      height: calc(100svh - 58px);
      grid-template-columns: 1fr;
      grid-template-rows: minmax(0, 1fr) auto;
      gap: 1rem;
      padding: 1rem;
    }

    .home-demo {
      order: 1;
    }

    .home-intro {
      order: 2;
      gap: 0.65rem;
      padding-left: 0;
    }

    .home-intro h1 {
      font-size: clamp(1.6rem, 7vw, 2rem);
    }

    .home-lead {
      max-width: none;
      font-size: 0.92rem;
      line-height: 1.6;
    }

  }
</style>
